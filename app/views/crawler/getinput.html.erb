<h1> Crawling Page </h1>
<%= form_tag({controller: "crawler",action: "crawl"}, method: "get") do %>
    <p>
    <%= label_tag("Enter Manufacturer name",:name) %>
    <%= text_field_tag(:name) %> 
    </p>
    <p>
    <%= label_tag("Enter Manufacturer url:") %>
    <%= text_field_tag(:url) %>
    </p>
    <p>
     <%= submit_tag("Crawl") %>
    </p>	
<% end %>
